public class FuncionMenor {

    // Función que devuelve el menor de tres números decimales
    public static double menor(double a, double b, double c) { //funcion
        double menor = a; // a sera menor la primera vez

        if (b < menor) {
            menor = b;
        }
        if (c < menor) {
            menor = c;
        }

        return menor;
    }

    public static void main(String[] args) {
        double x = 5.6, y = 2.3, z = 7.8;

        double resultado = menor(x, y, z);

        System.out.println("El menor de los tres números es: " + resultado);
    }
}
