public class Coche {
	// Atributos
	public String color;
	private String modelo;
	private int velocidadMaxima;
	private int potenciaMotor;
	private boolean enMarcha;
	
	private String marca;
	private int anioFabricacion;
	private double precio;
	
	
	// Constructor
	public Coche(String modelo, int velocidadMaxima, int potenciaMotor) {
		this.modelo = modelo;
		this.velocidadMaxima = velocidadMaxima;
		this.setPotenciaMotor(potenciaMotor);
		this.enMarcha = false; // El coche comienza apagado
	}
	
	public Coche() {
		this.modelo = " ";
		this.velocidadMaxima = 0;
		this.setPotenciaMotor(potenciaMotor);
		this.enMarcha = false; // El coche comienza apagado
		this.marca = "Sin marca";
		//this.anioFabricacion = 0000;
		this.precio = 0.0;
		this.setAnioFabricacion(anioFabricacion);
	}
	
	public Coche(String marca, String modelo, int anioFabricacion, double precio) {
		this.setMarca(marca);
		this.setModelo(modelo);
		this.anioFabricacion = anioFabricacion;
		this.precio = precio;
		
	}
	
// Metodos get y set
	public String getModelo() {
		return modelo;
	}
	
	public void setModelo(String modelo) {
		this.modelo = modelo;
	}
	
	public int getVelovidadMaxima() {
		return velocidadMaxima;
	}
	
	public void setVelocidadMaxima(int velocidadMaxima) {
		this.velocidadMaxima = velocidadMaxima;
	}
	
	public int getPotenciaMotor() {
		return potenciaMotor;
	}
	
	public void setPotenciaMotor(int potenciaMotor) {
		this.potenciaMotor = potenciaMotor;
	}
	
	private String getMarca() {
		return marca;
	}

	private void setMarca(String marca) {
		this.marca = marca;
	}

	private int getAnioFabricacion() {
		return anioFabricacion;
	}

	private void setAnioFabricacion(int anioFabricacion) {
		this.anioFabricacion = anioFabricacion;
	}
	private double getPrecio() {
		return precio;
	}

	private void setPrecio(double precio) {
		this.precio = precio;
	}

	// Metodos
	public void acelerar() {
		if (enMarcha) {
			System.out.println("El coche " + modelo + " esta acelerando.");
		} else {
			System.out.println("Primero enciende el coche.");
		}
	}
	public void frenar() {
		if (enMarcha) {
			System.out.println("El coche " + modelo + " esta frenando.");
		} else {
			System.out.println("El coche esta apagado, no se puede frenar.");
		}
	}
	public void encender() {
		enMarcha = true;
		System.out.println("El coche " + modelo + " se ha encendido.");
	}
	public void apagar() {
		enMarcha = false;
		System.out.println("El coche " + modelo + " se ha apagado.");
	}
	
	
	public double aplicarDescuento(int anioFabricacion, double precio) {
		if(anioFabricacion < 2010) {
			precio = precio * 0.40;
			System.out.println("El nuevo precio del coche "+marca+" con 10% de descuento es: "+precio);
			return precio;
		} else {
			System.out.println("No se aplica descuento, modelo nuevo/n");
			this.setPrecio(precio);
			return precio;
		}
	}
	
	public void informacionCoche() {
		System.out.print("\nINFORMACIÓN DEL COCHE\n-------------------\n");
		System.out.println("Color: "+color);
		System.out.println("Modelo: "+modelo);
		System.out.println("Velocidad Máxima: "+velocidadMaxima);
		System.out.println("Potencia del Motor: "+potenciaMotor);
		System.out.println("¿Está en marcha?: "+enMarcha);
		
	}

}


public class Main {
	
	 public static void main(String[] args) {
		 Coche miCoche = new Coche("Ferrari", 12, 80);
		 miCoche.encender();
		 miCoche.acelerar();
		 miCoche.frenar();
		 
		 Coche miCoche_2 = new Coche("Ferrari", "AJG-09", 2024, 8000.59);
		 miCoche_2.aplicarDescuento(2000, 17657);

	 }
}
